<mainMenu>:
	GridLayout:
		canvas.before:
			Color:
				rgb: .07, .07, .07
			Rectangle:
				pos: self.pos
				size: self.size
		rows: 3
		AnchorLayout:

			size: root.width, root.height
			anchor_x: "center"
			anchor_y: "top"
		
			Button:

				text:'Deactivate Alert'
				background_color: .8, .6, .7, .7
				size_hint: (.7, .5)

		AnchorLayout:

			size: root.width, root.height
			anchor_x: "center"
			anchor_y: "center"

			Button:
				text:'View Files'
				background_color: .8, .6, .7, .7
				size_y: 
				size_hint: (.7, .5)
				on_press: root.manager.current = 'files'

		AnchorLayout:

			size: root.width, root.height
			anchor_x: "center"
			anchor_y: "bottom"

			Button:
				text:'Turn off robot'
				background_color: .8, .6, .7, .7
				size_y: 
				size_hint: (.7, .5)



<robotFiles>:
	GridLayout:
		canvas.before:
			Color:
				rgb: .07, .07, .07
			Rectangle:
				pos: self.pos
				size: self.size
		rows: 1
		AnchorLayout:

			size: root.width, root.height
			anchor_x: "center"
			anchor_y: "top"
		
			Button:

				text:'Important Robot Shit'
				background_color: .8, .6, .7, .7
				pos_hint: {'x': .25, 'y': .3}
				size_hint: (.5, .5)
				on_press: root.manager.current = 'menu'